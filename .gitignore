import java.util.Scanner;
public class manavKasaProgrami {
    public static void main(String[] args){

       double armut= 2.14, elma=3.67, domates=1.11, muz=0.95, patlican=5.00, tutar;
       double armutTutar,elmaTutar,domatesTutar,muzTutar,patlicanTutar;

        Scanner input= new Scanner(System.in);

        System.out.print("Armut kaç kilo? ");
        armut= input.nextDouble();
        armutTutar= armut*2.14;

        System.out.print("Elma kaç kilo? ");
        elma= input.nextDouble();
        elmaTutar= elma*3.67;

        System.out.print("Domates kaç kilo? ");
        domates= input.nextDouble();
        domatesTutar= domates*1.11;

        System.out.print("Muz kaç kilo? ");
        muz= input.nextDouble();
        muzTutar= muz*0.95;

        System.out.print("Patlıcan kaç kilo? ");
        patlican= input.nextDouble();
        patlicanTutar= patlican*5.00;

        tutar=( armutTutar+elmaTutar+domatesTutar+muzTutar+patlicanTutar);

        System.out.println("Toplam Tutar :" +tutar);
        

    }
}
